<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style/DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ufrn.bti.desktop.netflixparaguaio.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Arquivo">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Sair" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Usuários">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNewUsuario" text="Novo Usuário" />
                  <MenuItem mnemonicParsing="false" onAction="#handleListarUsuarios" text="Ver usuários" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Conteúdo">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNewConteudo" text="Novo conteúdo" />
                  <MenuItem mnemonicParsing="false" onAction="#handleListarFilmesAdmin" text="Ver filmes" />
                  <MenuItem mnemonicParsing="false" onAction="#handleListarSeriadosAdmin" text="Ver seriados" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Pesquisar">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handlePesquisar" text="Pesquisar conteúdo" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
